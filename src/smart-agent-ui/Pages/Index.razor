@page "/"
@using MudBlazor

<PageTitle>Smart Agent UI</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Welcome to Smart Agent UI</MudText>
    <MudText Typo="Typo.h6" Class="mb-4">Unified Blazor Server Application</MudText>
    
    <MudCard>
        <MudCardContent>
            <MudText Typo="Typo.h6" GutterBottom="true">Application Status</MudText>
            <MudText>✅ Blazor Server is running</MudText>
            <MudText>✅ MudBlazor UI components loaded</MudText>
            <MudText>✅ Session storage available</MudText>
            <MudText>✅ Frontend and backend successfully merged</MudText>
            
            <MudDivider Class="my-4" />
            
            <MudText Typo="Typo.subtitle1" GutterBottom="true">Migration Complete</MudText>
            <MudText>
                This application has been successfully migrated from a separate frontend/backend 
                architecture to a unified Blazor Server application. All models and services 
                have been consolidated into a single project.
            </MudText>
            
            <MudAlert Severity="Severity.Info" Class="mt-4">
                <strong>Note:</strong> Additional features like chat, agents, and document processing 
                are available but may require proper Azure service configuration.
            </MudAlert>
        </MudCardContent>
    </MudCard>
</MudContainer>